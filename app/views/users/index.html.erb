<h1>Listing users</h1>
 
<%= link_to 'Create new user', new_user_path %>
<table>
	<tr>
		<th>Login</th>
		<th></th>
	</tr>
 
	<% @user.each do |user| %>
    <tr>
		<td><%= user.login %></td>
		<td><%= link_to 'Show', user_path(user) %></td>
		<% if current_user && (current_user.id == user.id) %>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<% end %>
    </tr>
	<% end %>
</table>

<%= link_to 'Home', root_path %>