<h1>Listing users</h1>
 
<%= link_to 'Create new user', new_user_path %>
<table>
	<tr>
		<th>Login</th>
		<th>Password</th>
		<th></th>
	</tr>
 
	<% @user.each do |user| %>
    <tr>
		<td><%= user.login %></td>
		<td><%= user.password %></td>
		<td><%= link_to 'Show', user_path(user) %></td>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Destory', user_path(user),
			method: :delete,
			data: { confirm: 'Are you sure?' } %></td>
    </tr>
	<% end %>
</table>

