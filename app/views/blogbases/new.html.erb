<h1>New Blog<h1>

<%= form_with model: @blog, local: true do |form| %>
	<p>
		<%= form.label :name %>
		<%= form.text_field :name %>
	</p>
	
	<%= form.hidden_field(:user_id, :value => params[:user_id]) %>
	
	<p>
		<%= form.submit 'Create Blog', :class=>'accept' %>
	</p>
<% end %>

<%= link_to 'Back to users', users_path %>